<engine xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="teardrop_1_0.xsd">
	<name>CiteSeer</name>
  <separator value="+" />
	<charset>ISO-8859-1</charset>
	<query method="GET">
		<url>http://citeseer.ist.psu.edu/cis</url>
		<inputfield name="q" value="%q" />
		<inputfield name="cs" value="1" />
  </query>
  <result>
		<regexp><![CDATA[<!--RIS--><a href="([^"]*)">([^>]*)</a>.*?color=black>(.*?)</font>]]></regexp>
		<field num="1" comparable="yes" name="url" />
		<field num="2" name="title" />
		<field num="3" striphtml="yes" name="abstract" />
  </result>
	<nextinput method="GET">
    <regexp><![CDATA[<a\s+href="([^"]*)">Next\s+20</a>]]></regexp>
		<inputfield num="1" escape="no" name="" value="%s" />
	</nextinput>
</engine>
